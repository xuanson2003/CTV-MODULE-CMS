
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/searchPartner.css" asp-append-version="true" />
</head>

<div class="banner">
    <img src="~/image/banner_quacert_home.png" alt="" />
</div>

<div class="search-form">
    <div class="search-form-container container">
        <form action="" class="row">
            <div class="col-lg-3 col-md-6 col-12">
                <input type="text"
                       class="form-control"
                       placeholder="Tên tổ chức"
                       aria-label="First name" />
            </div>
            <div class="col-lg-3 col-md-6 col-12">
                <select class="form-select form-control"
                        aria-label="Default select example">
                    <option selected>Loại hình chứng nhận</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6 col-12">
                <input type="text"
                       class="form-control"
                       placeholder="Lĩnh vực chứng nhận"
                       aria-label="Last name" />
            </div>
            <div class="col-lg-3 col-md-6 col-12">
                <button class="btn-cms">
                    <i class="fa-solid fa-magnifying-glass"></i>Tìm kiếm
                </button>
            </div>
        </form>
    </div>
</div>

<div class="search-result">
    <div class="container search-result-container">
        <div class="search-result-title">
            <p>Hiển thị <span>10</span> trên <span>2250</span> kết quả</p>
            <div class="search-result-filter">
                <p>Sắp xếp</p>
                <select class="form-select form-control"
                        aria-label="Default select example">
                    <option selected>Thích hợp</option>
                    <option value="1">Tài liệu A-Z</option>
                </select>
            </div>
        </div>
        <div class="search-result-main">
            <table class="table table-striped">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">STT</th>
                        <th scope="col">Đơn vị/Tổ chức</th>
                        <th scope="col">Lĩnh vực chứng nhận</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Otto</td>
                        <td>mdo</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Thornton</td>
                        <td>fat</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Thornton</td>
                        <td>fat</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="pagination container">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>


